.can{
  margin: 0 auto;
 // background: #D5554C;
}
.canvasBox{
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 900rpx;
  position: fixed;
  top: 9999px;

}
.canvasPreviewBox{
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 900rpx;
  width: 100%;
}
.canvasPreviewBox image{
  margin: 0 auto;
  display: block;
}
.operation{
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 22rpx;
  height: 290rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  box-shadow: 0 0 2px 2px #ccc;
}
.operation button{
  height: 92rpx;
  width: 100%;
  background: #575757;
  color:white;
}
.userAuth{
  position:fixed;
  width: 100%;
  height: 500rpx;
  background: rgba(0,0,0,0.8);
  top: 0;
  bottom: 0;
  margin: auto 0;
  z-index: 100;
}
.userAuth-tip{
  position: fixed;
  width: 514rpx;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  background: white;
  border-radius: 15rpx;
  height: 350rpx;
  box-sizing: border-box;
  padding: 35rpx 92rpx 35rpx;
  text-align: center;
}
.userAuth-tip text{
  font-size: 38rpx;
  line-height: 40rpx;
}
.userAuth-tip button{
  background: #D93035;
  color: white;
  margin-top: 35rpx;
}