}

.Boarding-point {
  width: 688rpx;
  margin: 0 auto;
  background-color: white;
  padding: 32rpx;
  border-radius: 15rpx;
  box-sizing: border-box;
  margin-top: 22rpx;
}
.Boarding-point .title {
  font-size: 30rpx;
  font-weight: bold;
  padding-bottom: 30rpx;
