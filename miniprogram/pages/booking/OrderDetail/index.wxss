  font-weight: 900;
  color: #424242;
}
.Boarding-point .point-time .point-time-info-info{
  font-size: 28rpx;
  color: #787C97;
}
.car-id {
  border: 2rpx solid #F3F5F4;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 30rpx;
}
.car-id-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #5BC177;
  background-color: #E5FDF0;
  padding: 26rpx;
}
.car-id-info {
  padding: 20rpx 0 20rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.car-id-info .no-id {
  font-size: 26rpx;
  color: #424242;
}
.car-id-info .info {
  font-size: 60rpx;
  font-weight: 500;
  color: #424242;
}

