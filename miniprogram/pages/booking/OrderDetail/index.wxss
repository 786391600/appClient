  align-items: center;
}
.Boarding-point .point-item-item {
  font-size: 30rpx;
  color: #424242;
  display: flex;
  align-items: center;
}
.Boarding-point .point-item .toAdress {
  font-size: 24rpx;
  padding: 8rpx;
  border: 2rpx solid #668FC5;
