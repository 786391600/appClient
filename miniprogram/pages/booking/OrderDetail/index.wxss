  font-weight: 500;
  flex-shrink: 0;
}
.Boarding-point .point-item .icon {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  font-size: 21rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}
.Boarding-point .point-time {
  display: flex;
  padding-top: 30rpx;
}
.Boarding-point .point-time .icon-shijian {
  font-size: 32rpx;
  color: #57CCAF;
  margin-right: 22rpx;
}
.Boarding-point .point-time .point-time-info-title{
