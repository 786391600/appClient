<wxs module="filter" src="../../../until/filter.wxs"></wxs>
<view id='ListBackground'>
  <view class='TitleAddress'>{{lineInfo.start}} - {{lineInfo.end}}</view>
  <view class='ContentAddress' wx:for="{{carList}}" bindtap='goTicketDetails' data-detail='{{item}}' data-num='{{filter.getNum(item, lineInfo)}}'>
    <view class='ContentBox'>
      <view class='BoxTitle'>
        <view>{{item.departureTime
}}</view>
        <view>￥{{lineInfo.price}}元</view>
      </view>
      <view class='BoxContent'>
        <view class='context-box'>
          <!-- <view class='cont-backg' wx:for="{{item.Route}}">
            <view style="background:{{item.Throughout>0?'#ffdc73':'#03a9f4'}}">{{item.Throughout>0?'上':'下'}}</view>
            <view>{{item.time}} {{item.content}}</view>
            <view>{{item.Throughout>0?'始发':'终点'}}</view>
          </view> -->
          <view class='cont-backg'>
            <view style="background:#ffdc73">起</view>
            <view>{{lineInfo.start}}</view>
            <view>始发</view>
          </view>
          <view class='cont-backg'>
            <view style="background:#03a9f4">终</view>
            <view>{{lineInfo.end}}</view>
            <view>终点</view>
          </view>
        </view>
        <view class='distance'>
          <view><span wx:if='{{filter.getNum(item, lineInfo) > 10}}'>余票充足</span><span wx:elif='{{filter.getNum(item, lineInfo) > 0}}'>剩余{{filter.getNum(item, lineInfo)}}张票</span><span wx:else>票已售光</span></view>
        </view>
      </view>
      <view class='provider' wx:if='{{item.provider}}'>服务提供商：{{item.provider}}</view>
      <view class='provider'>上车地点：<span wx:if='{{item.departurePlace}}'>{{item.departurePlace}}</span><span wx:else>随后通知</span></view>
    </view>
  </view>
</view>
