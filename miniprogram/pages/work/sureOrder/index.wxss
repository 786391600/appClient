/* pages/sureOrder.wxss */
page{
  background-color: #F5F5F5;
}
.order-list{
  width: 690rpx;
  background: #fff;
  border-radius: 15rpx;
  margin: 25rpx auto 0;
  padding: 0 30rpx 0;
  box-sizing: border-box;
}
.order-list .title{
  padding: 45rpx 0 45rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.order-list .bottom{
  padding: 45rpx 0 45rpx;
  font-size: 36rpx;
  box-sizing: border-box;
  font-weight: 500;
  text-align: right;
  border-top: 1rpx solid #EAEAEA;
}
.list {
  max-height: 400rpx;
  overflow-y: scroll;
}
.order-box {
  display: flex;
  flex-direction: row;
  margin-bottom: 35rpx;
}
.order-box image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 15rpx;
}

.order-box .order-right{
  display: flex;
  flex-direction: column;
  flex: 1;
  box-sizing: border-box;
  padding-left: 22rpx;
  color: #3A3A3A;
  justify-content: space-between;
}
.order-right .right-top{
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.right-top .top-title{
  font-size: 30rpx;
  font-weight: 800;
}

.right-top .top-price{
  font-size: 24rpx;
}
.right-bottom .bottom-num{
  font-size: 22rpx;
}



.adress{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx;
  box-sizing: border-box;
  margin-bottom: 25rpx;
  width: 690rpx;
  background: #fff;
  border-radius: 15rpx;
  margin: 25rpx auto 0;
}


.adress .adress-box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 85%;
  padding-right: 15rpx;
}
.adress-left{
  display: flex;
  align-items: center;
}
.adress-left .iconfont{
  font-size: 52rpx;
  color: #FCD844;
}
.adress .adress-text{
  padding: 0 28rpx 0;
  box-sizing: border-box;
}
.adress .used{
  width: 15%;
}
.adress-tit{
  font-size: 32rpx;
  padding: 5rpx 0 5rpx;
}
.adress-con{
  font-size: 32rpx;
  color: #C1C1C1;
  padding: 5rpx 0 5rpx;
}
.adress .icon-you{
  color: #899AA4;
  font-size: 28rpx;
}

.used{
  display: flex;
  justify-content: flex-end;
  border-left: 2rpx solid #E2E2E2;
}
.used-text{
  background: #FDE6D2;
  color: #F48934;
  font-size: 24rpx;
  padding: 10rpx;
}

/*支付操作*/
page{
  padding-bottom: 146rpx;
}
.pay-box{
  height: 146rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:  0 30rpx 0;
  box-sizing: border-box;
}
.pay-box .price {
  color: #F66A00;
  font-size: 28rpx;
}

.pay-box .price span{
  font-size: 48rpx;
  font-weight: 600;
}

.pay-box .btn{
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #FFCE00;
  line-height: 88rpx;
  padding: 0 30rpx 0;
  color: #41262B;
  font-size: 34rpx;
  font-weight: 600;
}

.pay-box .btn:active{
  background: #E8BC03;
}

