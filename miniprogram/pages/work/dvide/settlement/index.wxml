<view class="business-name">
  {{info.title}}
</view>
<view class="withdraw-box">
  <view class="withdraw-tit">
    可提现余额（元）<span>每天可提现一次，最大金额200元</span>
  </view>
  <view class="withdraw-price">
    ￥{{info.settlement || 0}}
  </view>
  <view class="withdraw-info" bindtap="toWithdrawal">提现记录</view>
  <view class="withdraw-oprate">
    <view class="to-orderlist" bindtap="toSettlementlist">结算明细 ></view>
    <view class="withdraw-btn" bindtap="businessWithdrawal">提现</view>
  </view>
</view>
