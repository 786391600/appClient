/* pages/shop.wxss */

image {
  width: 20rpx;
  height: 20rpx;
}

page {
  height: 100%;
  overflow: hidden;
}

.container {
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow-y: scroll;
}

.content-header {
  height: 150rpx;
  width: 100%;
  position: relative;
  background-color: #FCD844;
}

.content-header .notice {
  box-sizing: border-box;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  padding: 0rpx 20rpx 0rpx;
  flex: 1;
  max-height: 100%;
  overflow-y: scroll;
}

.notice .notice-con {
  /* transform: translateY(-100%) */
}
.notice .show {
  border: 1rpx solid #FF853A;
  height: 30rpx;
  padding: 0 5rpx 0;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FF853A;
}
.content-header .notice .gg {
  /* color: #EB864C; */
}

.content-header .share {
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.11);
  color: white;
  padding: 0 22rpx 0;
  box-sizing: border-box;
  border: 0;
  outline: none;
}

.content-header button::after {
  border: none;
}

.content-header .iconfont {
  color: #25DA6F;
  font-size: 40rpx;
}

.content-header-back {
  height: 100%;
  width: 100%;
  filter: blur(3rpx);
  top: 0;
  left: 0;
  position: absolute;
  z-index: -1;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.content-header-box {
  width: 702rpx;
  border-radius: 20rpx;
  background-color: white;
  margin: 0 auto;
  height: 100%;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
  padding: 25rpx 28rpx 25rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.content-header-box .header-tit {
  display: flex;
  align-items: center;
  height: 66rpx;
  font-size: 40rpx;
  font-weight: 800;
}

.content-header-box .header-tit .name {
  padding-left: 20rpx;
}

.content-header-box .header-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

.content-container {
  display: flex;
  height: calc(100% - 150rpx);
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

.content-container-title {
  position: absolute;
  top: 0;
  left: 180rpx;
  width: 100%;
  z-index: 2;
  font-size: 30rpx;
  padding: 0 22rpx 0;
  height: 60rpx;
  display: flex;
  align-items: center;
  background-color: white;
}
.content-container-title > view {
  background: #FA5B40;
  height: 40rpx;
  border-radius: 8rpx;
  border-bottom-right-radius: 20rpx;
  padding: 0 20rpx 0;
  color: white;
}

.classify-container {
  height: calc(100% - 150rpx);
  width: 180rpx;
  padding-bottom: 160rpx;
  background-color: #F8F8F8;
  box-sizing: border-box;
}

.classify-container-bg {
  background-color: #F7F7F6;
  width: 100%;
}

.classify-container-bg .item {
  width: 180rpx;
  text-align: center;
  color: #838383;
  font-size: 26rpx;
  padding: 22rpx 0;
}

.classify-container-bg .item.active {
  background-color: #fff;
  color: #1A1B1D;
  font-weight: 800;
}

.classify-container-bg .img-wrap {
  text-align: center;
  padding: 22rpx 0 18rpx;
  font-size: 32rpx;
}

.classify-container-bg .img-wrap .iconfont {
  font-size: 55rpx;
}

.classify-container-bg .img-wrap image {
  text-align: center;
  width: 40rpx;
  height: 40rpx;
}

/* 右边 */

.goods-container {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 160rpx;
}

.goods-container .xTop {
  width: 100%;
  opacity: 0;
}


.goods-container .content {
  font-size: 28rpx;
  padding: 10rpx 30rpx 10rpx;
  box-sizing: border-box;
  border: 1rpx solid #FEAC08;
  color: black;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.goods-container .content>.gg {
  font-size: 24rpx;
  color: white;
  background: #FEAC08;
  border-radius: 15rpx;
  padding: 5rpx 8rpx 5rpx;
  box-sizing: border-box;
  font-weight: 600;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.goods-container .classify .title {
  font-size: 30rpx;
  padding: 0 22rpx 0;
  height: 60rpx;
  display: flex;
  align-items: center;
  background-color: white;
  margin-bottom: 30rpx;
}

.classifytitle-box {
  height: 60rpx;
}

.goods-container .classify .right {
  padding-bottom: 41rpx;
}

.goods-container .item {
  box-sizing: border-box;
  /* height: 156rpx; */
  display: flex;
  /* padding: 55rpx 22rpx 0; */
  background-color: #fff;
  margin-bottom: 60rpx;
  padding: 0rpx 26rpx 0rpx 13rpx;
}

.goods-container .sellout {
  opacity: 0.6;
}

.goods-container .item .left-box {
  width: 202rpx;
  height: 202rpx;
  background: white;
  background-repeat: no-repeat;
  background-size: cover;
  border-radius: 18rpx;
  background-position: center;
  border: 1rpx solid rgba(255, 208, 0, 0.5)
}

.goods-container .item .left-box image {
  width: 100%;
  height: 100%;
  background-color: white;
}

.goods-container .item .right {
  flex: 1;
  margin-left: 34rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 202rpx;
}

.goods-container .item .right .name {
  width: 100%;
  color: #000;
  font-size: 32rpx;
  /* height: 48rpx; */
  margin-bottom: 15rpx;
  font-weight: 800;
}

.goods-container .price-num-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods-container .delivery {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods-container .price-num-wrap .price {
  /* margin-left: -6rpx; */
  color: #E35E5D;
  font-size: 22rpx;
}

.goods-container .price-num-wrap .price>span {
  font-size: 36rpx;
  font-weight: 800;
}

.goods-container .right .attach {
  color: #E35E5D;
  font-size: 22rpx;
}

.surcharge-box {
  display: flex;
  flex-direction: column;
}

.surcharge-item {
  height: 20rpx;
  margin-bottom: 10rpx;
}

.goods-container .price-num-wrap .num-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
}

.goods-container .price-num-wrap .num-wrap text {
  width: 68rpx;
  text-align: center;
}

.goods-container .price-num-wrap .num-wrap image {
  width: 40rpx;
  height: 40rpx;
}

.goods-container .price-num-wrap .select-spec {
  z-index: 0;
  width: 126rpx;
  height: 52rpx;
  background: rgba(255, 208, 0, 1);
  border-radius: 10rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #4a4a4a;
  position: relative;
}

.goods-container .sellout .price-num-wrap .select-spec {
  background: transparent;
}

.goods-container .price-num-wrap .select-spec .icon-num {
  z-index: 0;
  font-size: 32rpx;
  min-width: 35rpx;
  padding: 0 5rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #2b70ff;
  position: absolute;
  border-radius: 40rpx;
  top: -16rpx;
  right: -14rpx;
  text-align: center;
  color: #fff;
}

/* 购物车 */
.shopping-cart-bg {
  background-color: #fff;
  height: 160rpx;
  z-index: 8;
  position: fixed;
  right: 0;
  left: 0;
  bottom: 0;
}



.shopping-cart .left-box {
  display: flex;
  margin-left: 48rpx;
  align-items: center;
}

.shopping-cart .left-box .icon-wrap {
  position: relative;
}

.shopping-cart .left-box .icon-wrap .icon-card {
  width: 60rpx;
  height: 60rpx;
}

.shopping-cart .left-box .icon-wrap .icon-num {
  font-size: 32rpx;
  min-width: 35rpx;
  padding: 0 5rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #2b70ff;
  position: absolute;
  border-radius: 40rpx;
  top: -16rpx;
  right: -24rpx;
  text-align: center;
  color: #fff;
}

.shopping-cart .left-box .price {
  color: #4a4a4a;
  font-size: 36rpx;
  margin-left: 30rpx;
}

.shopping-cart .right-box {
  font-size: 32rpx;
  width: 196rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(255, 208, 0, 1);
  border-radius: 44rpx;
  text-align: center;
  color: #4a4a4a;
  margin-right: 10rpx;
  overflow: hidden;
}

.shopping-cart .disabled {
  background-color: #92918d;
  color: white;
}

