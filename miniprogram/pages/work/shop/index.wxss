.cart-details .content .item-wrap .item {
  font-size: 32rpx;
  display: flex;
  align-items: center;
  color: #4a4a4a;
  padding: 20rpx 0 20rpx;
}

.cart-details .content .item-wrap .item .goods-name {
  flex: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
