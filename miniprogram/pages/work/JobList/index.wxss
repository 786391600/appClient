@import '../../../style/ticket/iconfont.wxss';
page{
  background: #F5F5F5;
}
.page-box{
  padding-bottom: 80rpx;
}
.work-box{
  display: flex;
  box-sizing: border-box;
  width: 690rpx;
  border-radius: 10rpx;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 15rpx auto 0;
}
.work-box .box{
  display: flex;
  align-items: center;
  width: 50%;
  box-sizing: border-box;
  background:white;
  padding: 48rpx 0rpx 48rpx;
}
.work-box .box:nth-of-type(odd) {
  border-right: 1rpx solid #EBEBEB;
  border-bottom: 1rpx solid #EBEBEB;
}
.work-box .box:nth-of-type(even) {
  border-bottom: 1rpx solid #EBEBEB;
}
.work-box .box:nth-child(1) {
  border-top-left-radius: 15rpx;
}
.work-box .box:nth-child(2) {
  border-top-right-radius: 15rpx;
}
.work-box .box:nth-last-child(1) {
  border-bottom-right-radius: 15rpx;
}
.work-box .box:nth-last-child(2) {
  border-bottom-left-radius: 15rpx;
}
.box .box-icon{
  padding: 0 42rpx 0;
}
.box .box-icon .iconfont{
  font-size: 66rpx;
}
.box .box-text{
  display: flex;
  flex-direction: column;
}
.box .box-text-tit{
  font-size: 34rpx;
}
.box .box-text-con{
  font-size: 24rpx;
  color: #9B9B9B;
}
.school-name{
  text-align: center;
  padding: 20rpx 0 20rpx;
  color: #666666;
  background: #FCD844;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #301A00;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 100;
}
.school-name .icon-xiaoyuan{
  font-size:42rpx;
}
.school-name .icon-xiala{
  margin-left: 10rpx;
  font-size: 25rpx;
}

.share button {
  background: #FECB2E;
  color: #333333;
}

/*通知*/
.notify {
  height: 28rpx;
  padding: 0 20rpx;
}

/*商店*/
.shop-box .title {
  padding: 32rpx;
  border-bottom: 1rpx solid #EBECEE;
  font-size: 26rpx;
  color: #7F7F7F;
  background: white;
}
.shop-box{
  width: 690rpx;
  margin: 15rpx auto 15rpx;
  border-radius: 15rpx;
  overflow: hidden;
}


.shop-box .user-oprate{
  width: 100%;
  display: flex;
  background: white;
  flex-wrap: wrap;
}
.shop-box .oprate-box{
  width: 33.3333333%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.shop-box .oprate-box .icon{
  margin-bottom: 15rpx;
}
.shop-box .oprate-box .iconfont{
  font-size: 52rpx;
}
.shop-box .oprate-text{
  font-size: 32rpx;
  max-width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


/*商家列表*/
.business-box {
  width: 690rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
.business-item{
  display: flex;
  flex-direction: row;
  background-color: white;
  border-radius: 20rpx;
  width: 100%;
  padding: 26rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
}
.business-title {
  color: #726234;
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  /* position: sticky;
  position: -webkit-sticky; */
  top: 0;/*距离顶部多少吸顶*/
  /* z-index: 1000; */
}
.business-head{
  width: 142rpx;
  height: 142rpx;
  border-radius: 15rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  border: 2rpx solid #F3F1F2;
  position: relative;
  overflow: hidden;
}
.business-head .tip {
  position: absolute;
  font-size: 20rpx;
  color: #3E3202;
  background: linear-gradient(to right, #FBE66F, #FFCD49);
  right: -4rpx;
  top: -4rpx;
  padding: 4rpx 8rpx 4rpx;
  border-top-left-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
  border-top-right-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}

.business-head .close {
  position: absolute;
  font-size: 20rpx;
  color: white;
  bottom: 0;
  width: 100%;
  background-color: #D2D1D2;
  text-align: center;
}

.business-head .icon{
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 142rpx;
}
.business-head .icon .iconfont{
  font-size: 90rpx;
}

.business-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 18rpx;
  box-sizing: border-box;
}
.business-info .title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222222;
}
.business-info .condition {
  font-size: 24rpx;
  color: #4E4E4E;
  display: flex;
  justify-content: space-between;
}
.business-info .major {
  background-color: #FCD66B;
  color: #4C3B0D;
  border-top-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  padding: 2rpx 8rpx 2rpx;
}
.business-info .recommend{
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 0 !important;
}
.business-info .recommend span {
  font-size: 26rpx;
  color: #E49836;
  background-color: #FBF8D7;
  padding: 2rpx 8rpx 2rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}
.business-info .row{
  display: flex;
  flex-direction: row;
  margin-bottom: 23rpx;
}

.share{
  position: fixed;
  left: 0rpx; 
  bottom: 300rpx;
  width: 80rpx;
  height: 80rpx;
  /* overflow: hidden; */
  font-size: 44rpx;
}
.share button{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  outline: none;
  background-color: #FFFFFF;
  color: #505050;
  opacity: 0.8;
  border-radius: 0%;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  border: 1rpx solid #DFDFDF;
}
.share button::after{
  border: none;
}