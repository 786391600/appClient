@import '../../../style/ticket/iconfont.wxss';


/**index.wxss**/
.tab-h {
  width: 100%;
  background: white;
  font-size: 16px;
  white-space: nowrap;
  z-index: 999;
  height: 100%;
}

.swiper_tab_view {
  width: 100%;
  text-align: left;
  height: 70rpx;
  background: yellow;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #777;
  box-sizing: border-box;
  text-align: center;
  height: calc(100% - 5rpx);
  box-sizing: border-box;
}

.on {
  color: #F37B1D;
  border-bottom: 5rpx solid #F37B1D;
  box-sizing: border-box;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}


.box {
  display: flex;

  flex-direction: column;

  height: 100vh;

  overflow: hidden;
  padding-bottom: 121rpx;
  box-sizing: border-box;
  background: #F8F8F8;
}

.box-head {
  flex-shrink: 0;

  height: 70rpx;

}

.box-scroll {
  flex: 1;
  box-sizing: border-box;
  height: 1px;
  padding: 13rpx;
}

.order-card {
  width: 100%;
  background: #FFF;
  border-radius: 10rpx;
  border: 1rpx solid #F4F4F4;
}
.order-card .oprate{
  padding: 22rpx;
  box-sizing: border-box;
}
.oprate button {
  height: 86rpx;
  line-height: 86rpx;
  background: #FECB2E;
  color: #333333;
  font-size: 36rpx;
  font-weight: 600;
}

.oprate .button-hover {
  height: 86rpx;
  line-height: 86rpx;
  background: red;
  color: #333333;
  font-size: 36rpx;
  font-weight: 600;
}
.box-scroll .title{
  padding: 35rpx 26rpx 35rpx;
  display: flex;
  justify-content: flex-end;
}
.box-scroll .fee-title{
  color: #FE7701;
}
.box-scroll .fee .num{
  font-size: 34rpx;
  font-weight: 700;
}
.box-scroll .fee {
  color: #F40000;
  font-size: 22rpx;
}

