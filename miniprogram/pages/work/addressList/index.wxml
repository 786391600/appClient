<view class="address-list">
  <view class="address-box" wx:for='{{addressList}}' wx:for-index="index" data-index="{{index}}" data-address = '{{item}}' bindtap="selectAddress">
    <view class="address-info">
      <view class="info-title">{{item.schoolName}} - {{item.address}}</view>
      <view class="info-con">{{item.name}} {{item.phone}}</view>
    </view>
    <view class="address-edit" catchtap="toEditOrAdd" data-index="{{index}}">
       <i class="iconfont icon-bianji1"></i>
    </view>
  </view>
</view>

<view class="empty" wx:if="{{addressList.length === 0}}">
  <view><i class="iconfont icon-zuobiao1"></i></view>
  <view>暂无地址..</view>
</view>

<view class="add-btn" bindtap="toEditOrAdd">
   新增常用地址
</view>