<form bindsubmit="formSubmit">
  <view id='time'>
    <view>城际快线 5月31日 星期五</view>
    <view>成人票价:￥35</view>
  </view>
  <view id='Start'>
    <view class='Start'>
      <view class='end'>太原理工</view>
      <i class='iconfont ticket4'></i>
      <view class='end'>乡宁</view>
    </view>
  </view>
  <view id='Title'>选择乘客</view>
  <view class='Passenger'>
    <view class='AddTo'>+ 添加乘车人</view>
  </view>
  <view id='Title'>联系方式</view>
  <view>
    <view class='Contacts'>
      <view>联系人</view>
      <input name="name" placeholder="请输入姓名"/>
    </view>
    <view class='PhoneNumber'>
      <view>手机号码</view>
      <input name="phone" placeholder="请输入手机号码" maxlength="11"/>
    </view>
  </view>
  <view class='Submission'>
    <view class='payment'>
      <view>付款金额</view>
      <view>￥0元</view>
    </view>
    <button form-type="submit">提交订单</button>
  </view>
</form>
