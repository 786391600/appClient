/* pages/work/shopList/index.wxss */
/*商家列表*/
.business-box {
  width: 690rpx;
  margin: 0 auto;
  /* margin-top: 20rpx; */
}
.business-item{
  display: flex;
  flex-direction: row;
  background-color: white;
  border-radius: 20rpx;
  width: 100%;
  padding: 26rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
}
.business-title {
  color: #726234;
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  /* position: sticky;
  position: -webkit-sticky; */
  top: 0;/*距离顶部多少吸顶*/
  /* z-index: 1000; */
}
.business-head{
  width: 142rpx;
  height: 142rpx;
  border-radius: 15rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  border: 2rpx solid #F3F1F2;
  position: relative;
  overflow: hidden;
}
.business-head .tip {
  position: absolute;
  font-size: 20rpx;
  color: #3E3202;
  background: linear-gradient(to right, #FBE66F, #FFCD49);
  right: -4rpx;
  top: -4rpx;
  padding: 4rpx 8rpx 4rpx;
  border-top-left-radius: 5rpx;
  border-bottom-right-radius: 5rpx;
  border-top-right-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}

.business-head .close {
  position: absolute;
  font-size: 20rpx;
  color: white;
  bottom: 0;
  width: 100%;
  background-color: #D2D1D2;
  text-align: center;
}

.business-head .icon{
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 142rpx;
}
.business-head .icon .iconfont{
  font-size: 90rpx;
}

.business-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 18rpx;
  box-sizing: border-box;
}
.business-info .title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222222;
}
.business-info .condition {
  font-size: 24rpx;
  color: #4E4E4E;
  display: flex;
  justify-content: space-between;
}
.business-info .major {
  background-color: #FCD66B;
  color: #4C3B0D;
  border-top-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  padding: 2rpx 8rpx 2rpx;
}
.business-info .recommend{
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 0 !important;
}
.business-info .recommend span {
  font-size: 26rpx;
  color: #E49836;
  background-color: #FBF8D7;
  padding: 2rpx 8rpx 2rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}
.business-info .row{
  display: flex;
  flex-direction: row;
  margin-bottom: 23rpx;
}

.share{
  position: fixed;
  left: 0rpx; 
  bottom: 300rpx;
  width: 80rpx;
  height: 80rpx;
  /* overflow: hidden; */
  font-size: 44rpx;
}
.share button{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  outline: none;
  background-color: #FFFFFF;
  color: #505050;
  opacity: 0.8;
  border-radius: 0%;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  border: 1rpx solid #DFDFDF;
}
.share button::after{
  border: none;
}

/* 加载动画 */
.loaded {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color:rgba(0, 0, 0, 0.8);
  margin-left: 8rpx;
}
.loading-box{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 15rpx;
}
.loading-box span {
  font-size: 30rpx;
  color:rgba(0, 0, 0, 0.8);
  margin-left: 8rpx;
}
.loading {
  position: relative;
  width: 30rpx;
  height: 30rpx;
  border: 5rpx solid #FECB2E;
  border-top-color: rgba(255, 255, 255, 0.8);
  border-right-color: rgba(255, 255, 255, 0.8);
  border-bottom-color: rgba(255, 255, 255, 0.8);
  border-radius: 100%;

  animation: circle infinite 0.65s linear;
}

@keyframes circle {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}