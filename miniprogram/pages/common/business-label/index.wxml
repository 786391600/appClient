<view style="margin-bottom: 25rpx;" wx:if="{{labelList && labelList.length > 0}}">
  <view class="label-box">
    <view class="label {{activeIndex === index? 'active':''}} {{showTip? 'tip-button' : ''}}" wx:for="{{labelList}}" bindtap="labelClick" data-index="{{index}}">
      {{item.label}}
    </view>
  </view>
  <view class="tip" wx:if="{{showTip}}">请点击选择一项业务</view>
</view>

