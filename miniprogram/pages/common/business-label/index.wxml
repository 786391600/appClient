<view class="labelConfigbox" wx:if="{{config}}">
  <view class="label-box" style="padding-right:0">
    <view class="label" style="color:{{labelItem.color}};background-color: {{labelItem.background}}"  wx:for="{{configList}}" bindtap="indexLabelClick" wx:for-item='labelItem' wx:for-index='idx' data-tasktype="{{labelItem.setType}}" data-labelindex="{{labelItem.setIndex}}">
      {{labelItem.label}}
    </view>
  </view>
</view>