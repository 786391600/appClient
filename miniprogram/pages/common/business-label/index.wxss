.label-box {
  background-color: white;
  padding: 10rpx 15rpx 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.label-box .label {
  font-size: 28rpx;
  padding: 10rpx 30rpx 10rpx;
  background: #FFF9EB;
  border-radius: 10rpx;
  display: inline-block;
  margin: 10rpx 10rpx 10rpx;
  color: #636A63;
  box-sizing: border-box;
  width: 30%;
  text-align: center;
  border: 1rpx solid #FFF9EB;
  display: flex;
  align-items: center;
  justify-content: center;
}

.label-box .recommend{
  background: rgba(226,69,61, 0.5);
  color: white;
}

.label-box .label:active {
  opacity: 0.8;
}

.label-box .active {
  border: 1rpx solid #FCD844;
  background-color: white;
  color: #FCD844;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.label-box .active::after {
  content: 'âœ“';
  display: block;
  position: absolute;
  background-color: #FCD844;
  padding: 5rpx 15rpx 5rpx;
  right: 0;
  top: 0;
  color: white;
  border-bottom-left-radius: 50%;
  font-size: 16rpx;
}

.tip {
  padding: 0 15rpx 0;
  color: #F66A00;
  font-size: 26rpx;
  background-color: white;
  text-align: center;
}

.label-box .tip-button {
  background-color: #FFF7F5;
  border: 1rpx solid rgba(246, 106, 0, 0.6);
  animation: fade 300ms 5;
}

@keyframes fade {
  from {
    opacity: 1.0;
  }

  50% {
    opacity: 0.6;
  }

  to {
    opacity: 1.0;
  }
}

.labelConfigbox {
  margin: 25rpx auto 0;
  border-radius: 15rpx;
  width: 690rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.labelConfigbox .label-box{
  display: flex;
}

.labelConfigbox .label-box .label{
  font-size: 32rpx;
  padding: 15rpx 30rpx 15rpx;
  white-space: nowrap
}
.labelConfigbox .label-box .label:active{
  opacity: 0.8;
  transform: translate(0,3);
}