/* miniprogram/pages/OrderList/index.wxss */
@import '../../style/ticket/iconfont.wxss';
page {
  background-color: #eeeeee;
} 
.ticket4{
  font-size: 50rpx;
}
#ListBackground{
  padding: 90rpx 0;
  display: flex;
  justify-content:center;
  flex-wrap:wrap;
}
.TicketBackground{
  width: 100%;
  background: #ffffff;
  margin-top: 20rpx;
  border-radius: 10rpx;
}
.distance{
  display: flex;
  justify-content:center;
  margin:30rpx 0; 
  font-size: 40rpx;
}
.DepartureTime{
  padding-left: 60rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
}
.DepartureTime view:nth-child(1){
  width: 25%;
}
.DepartureTime view:nth-child(2){
  width: 75%;
}
.provider{
  margin: 30rpx 0;
  padding-left:10rpx; 
  font-size: 30rpx;
  border-top: 1rpx #eeeeee solid;
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.provider view:nth-child(1){
  width: 70%;
  display: flex;
  flex-direction: row;
}
.provider view:nth-child(1) view:nth-child(1){
  width: 32%;
}
.provider view:nth-child(1) view:nth-child(2){
  width: 68%;
}
.place{
  padding: 0 30rpx 0 60rpx; 
  font-size: 30rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}
.place view:nth-child(1){
  width: 25%;
}
.place view:nth-child(2){
  width: 75%;
}
.TrainNumber{
    margin: 30rpx 0;
    padding-left:10rpx; 
}
.Toticket{
  width: 160rpx;
  height: 58rpx;
  font-size: 30rpx;
  color: #ffffff;
  background: #d03835;
  border-radius: 10rpx;
  line-height: 58rpx;
  text-align: center;
  margin-right: 30rpx;
}