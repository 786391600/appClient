<view class='ticket-box'>
   <view class='ticket-search'>
     <view class='ticket-top'>
       <view class='ticket-top-left'>
          <view class='ticket-top-left-input'>
            <i class='iconfont ticket2'></i>
            <view>{{startAddress}}</view>
          </view>
          <view class='ticket-top-left-input'>
            <i class='iconfont ticket1'></i>
            <view>{{endAddress}}</view>
          </view>
       </view>
       <view class='ticket-top-right'>
        <view class='trans-btn' bindtap='exchangeAddress'>
          <i class='iconfont ticket3'></i>
        </view>
       </view> 
     </view>
     <view class='ticket-btn'>
       <button bindtap='serch'>查询</button>
     </view>
   </view>
</view>
<view class='HistoricalRecord' wx:if="{{HistoricalRecord.length>0}}">
    <i class='del iconfont ticket5' bindtap='DelHistory'></i>
    <view class='Histori-title'>
      <text class='HistoricalRecord-title'>历史记录</text>
    </view>
    <view class='Histori-content'>
      <view wx:for="{{HistoricalRecord}}">{{item.star}}<i class='iconfont ticket4'></i>{{item.end}}</view>
    </view>
</view>
<view class='HistoricalRecord'>
  <view class='Histori-title'>
      <text class='HistoricalRecord-title2'>推荐路线</text>
  </view>
  <view class='eg2-box' wx:for="{{RecommendedRoute}}">
    <view class='eg2'>
      <view class='circle1'></view>
      <view class='Recommend-content'>{{item.star}}-{{item.end}}({{item.time}})</view>
      <view class='Recommend-monery'>￥{{item.monery}}</view>
    </view>
  </view>
</view>