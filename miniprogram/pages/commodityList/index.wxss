@import '../../style/iconfont.wxss';
.list-box{
  box-sizing: border-box;
  width: 100%;
  padding: 0rpx 24rpx 0rpx;
}
.list-item{
  height: 240rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-shadow: 0 0 2rpx 2rpx #ccc;
  border-radius: 12rpx;
}
.list-item-left{
  width: 240rpx;
  height: 240rpx;
  background: red;
  overflow: hidden;
  object-fit: cover;
}
.list-item-left image{
  width: 100%;
  height: 100%;
}
.list-item-right{
  display: flex;
  flex-direction: column;
  justify-content:center;
}
.buy-button{
  font-size: 28rpx;
  color: white;
  background: red;
}
