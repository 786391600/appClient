@import '../../style/iconfont.wxss';
page{
  background: #F6F6F6;
}
.list-box{
  box-sizing: border-box;
  width: 100%;
  padding: 0rpx 24rpx 0rpx;
}
.list-item{
  height: 240rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  border-radius: 12rpx;
  background: white;
  font-weight: bold;
  overflow: hidden;
  box-shadow: 0px 0px 1px 1px #ccc;
}
.list-item-left{
  width: 240rpx;
  height: 240rpx;
  overflow: hidden;
  object-fit: cover;
}
.list-item-left image{
  width: 100%;
  height: 100%;
}
.list-item-right{
  display: flex;
  flex-direction: column;
  justify-content:center;
  width: calc(100% - 240rpx);
  padding: 0rpx 20rpx 0rpx;
  font-size: 34rpx;
}
.buy-button{
  font-size: 28rpx;
  color: white;
  background: red;
}
.item-price{
  font-size: 40rpx;
  color: #FE5045;
  margin: 10rpx 0rpx 10rpx;
}
.item-btn{
  width: 100%;
}
.item-btn>view{
  width: 40%;
  float: right;
}
